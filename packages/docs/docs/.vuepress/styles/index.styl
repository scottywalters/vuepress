.sidebar
  width 16rem


.search-box input
  border-radius 3px !important

.home .hero .action-button
  border-radius 3px !important

pre.vue-container
  border-left-width: .5rem;
  border-left-style: solid;
  border-color: #42b983;
  border-radius: 0px;
  & > code
    font-size: 14px !important;
    & > p
      margin: -5px 0 -20px 0;
    code
      background-color: #42b983 !important;
      padding: 3px 5px;
      border-radius: 3px;
      color #000
    em
      color #808080
      font-weight light

// vuepress-plugin-container
.theorem
  margin 1rem 0
  padding .1rem 1.5rem
  border-radius 0.4rem
  color #fff
  background-color #003a6d
  .title
    font-weight bold
    color #fff

.custom-block
  &.right
    color transparentify($textColor, 0.4)
    font-size 0.9rem
    text-align right

// Code Copy
.code-copy svg.hover
    top 7.5px
    right 86px

.table-of-contents
    ul
        list-style-type "\21B3"
        li
            &:hover
                color #0f62fe
                text-decoration none !important
            a
                margin-left 10px
                color #333333
                &:hover
                    color inherit
                    text-decoration none !important
